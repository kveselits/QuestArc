<ContentDialog
    x:Class="QuestArc.Views.CombatDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuestArc.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Battle Simulator"
    PrimaryButtonText="Run"
    SecondaryButtonText="Fight"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" Width="1263">

    <Grid>
        <Image
                Opacity="0.5"
                Source="../Assets/tavernBackground.jpg"
                Stretch="Fill" Margin="0,0,-333,0" />

        <!--#region LeftPane-->
        <StackPanel
                Margin="10,50,257,230"
                Background="LightYellow"
                BorderBrush="DarkBlue"
                BorderThickness="4"
                CornerRadius="10">

            <TextBlock Text="Character Name" TextWrapping="Wrap" FontSize="14px" Height="20" Width="215"/>
            <Image Source="../Assets/dwarf.jpg" />

            <TextBlock Text="Health" TextWrapping="Wrap" FontSize="8px" Height="12"/>
            <ProgressBar Height="20" Value="100" Foreground="Firebrick"/>

            <TextBlock Text="Weapon Damage" TextWrapping="Wrap" FontSize="8px" Height="12"/>


        </StackPanel>
        <!--#endregion-->

        <!--#region RightPane-->
        <Grid
            Margin="249,50,10,230"
            Background="DimGray"
            BorderBrush="DarkBlue"
            BorderThickness="4"
            CornerRadius="10">

            <StackPanel>
                <TextBlock Text="Monster Name" TextWrapping="Wrap" FontSize="14px" Height="20" Width="215"/>
                <Image Source="../Assets/Goblin.jpg" Height="212"/>

                <TextBlock Text="Health" TextWrapping="Wrap" FontSize="8px" Height="12"/>
                <ProgressBar Height="20" Value="100" Foreground="Firebrick"/>

                <TextBlock Text="Damage" TextWrapping="Wrap" FontSize="8px" Height="12"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->

    </Grid>
</ContentDialog>
