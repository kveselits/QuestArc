<ContentDialog
    x:Class="QuestArc.Views.TaskEditModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:QuestArc.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TITLE"
    PrimaryButtonClick="TaskEditModal_PrimaryButtonClick"
    PrimaryButtonText="Button1"
    SecondaryButtonClick="TaskEditModal_SecondaryButtonClick"
    SecondaryButtonText="Button2"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox
            Name="titleTextBox"
            Header="Title"
            Text="{x:Bind Quest.Title}" />
        <TextBox
            Name="descriptionTextBox"
            Header="Description"
            Text="{x:Bind Quest.Description}" />
        <DatePicker x:Name="startDatePicker" Header="Start Date" />
        <TimePicker x:Name="startTimePicker" Header="Start Time" />
        <DatePicker x:Name="endDatePicker" Header="End Date" />
        <TimePicker x:Name="endTimePicker" Header="End Time" />
        <ComboBox
            x:Name="difficultyPicker"
            Width="296"
            Height="44"
            DisplayMemberPath="Source"
            Header="Difficulty"
            ItemsSource="{x:Bind Difficulties}" />
        <ComboBox
            x:Name="statusPicker"
            Width="296"
            Height="44"
            DisplayMemberPath="Source"
            Header="Status"
            ItemsSource="{x:Bind Statuses}" />
        <CheckBox x:Name="allDayPicker" Content="All Day" />
        <TextBlock x:Name="errorTextBlock" Foreground="Red" />

        <!--  Content body  -->
        <ListView x:Name="questList" />
        <TextBlock Name="body">
            <TextBlock.Text>
                Edit a Quest
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</ContentDialog>
