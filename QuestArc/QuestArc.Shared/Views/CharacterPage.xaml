<Page
    x:Class="QuestArc.Views.CharacterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Viewbox MaxWidth="1800" MaxHeight="900">
        <Grid>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="Character Page" />
            <Image
                Opacity="0.5"
                Source="../Assets/tavernBackground.jpg"
                Stretch="Fill" />

            <!--#region LeftPane-->
            <Grid
                Margin="50,50,910,50"
                Background="LightYellow"
                BorderBrush="DarkBlue"
                BorderThickness="4"
                CornerRadius="10">

                <StackPanel
                    Margin="45,25,45,450"
                    BorderBrush="DarkBlue"
                    BorderThickness="2">
                    <TextBlock
                        x:Name="CharNameBlock"
                        Width="430"
                        Height="52"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="{Binding viewName, FallbackValue=NoBind}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <Image
                        Width="330"
                        Height="300"
                        Source="../Assets/dwarf.jpg" />
                    <TextBlock
                        x:Name="CharLevelBlock"
                        Width="430"
                        FontSize="24"
                        Foreground="Black"
                        Text="{Binding viewLevel, FallbackValue=42}" />
                    <ProgressBar
                        x:Name="healthProgBar"
                        Height="20"
                        Maximum="100"
                        Value="{Binding viewHealth, FallbackValue=50}" />
                    <ProgressBar
                        x:Name="CharProgBar"
                        Height="8"
                        Maximum="100"
                        Value="50" />
                </StackPanel>

                <StackPanel
                    Margin="45,440,45,40"
                    Background="WhiteSmoke"
                    BorderBrush="DarkBlue"
                    BorderThickness="2"
                    Spacing="5">


                    <!--  STRENGTH  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,10,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="STR: " />
                    <TextBlock
                        x:Name="strLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewStr, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />


                    <!--  CONSTITUTION  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,0,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="CON: " />
                    <TextBlock
                        x:Name="conLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewCon, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />



                    <!--  DEXTERITY  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,0,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="DEX: " />
                    <TextBlock
                        x:Name="dexLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewDex, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />



                    <!--  WISDOM  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,0,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="WIS: " />
                    <TextBlock
                        x:Name="wisLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewWis, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />




                    <!--  CHARISMA  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,0,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="CHA: " />
                    <TextBlock
                        x:Name="chaLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewCha, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />




                    <!--  INTELLIGENCE  -->
                    <TextBlock
                        Width="90"
                        Margin="-300,0,0,0"
                        FontSize="40"
                        Foreground="Black"
                        Text="INT: " />
                    <TextBlock
                        x:Name="intLevelTextBlock"
                        Width="50"
                        Margin="-140,-55,0,0"
                        FontSize="38"
                        Foreground="Black"
                        Text="{Binding viewInt, FallbackValue=-1}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Button
                        Margin="200,-55,0,0"
                        Click="LevelUpButton_Pressed"
                        Content="Level Up"
                        Foreground="Black" />
                </StackPanel>

            </Grid>
            <!--#endregion-->

            <!--#region RightPane-->
            <Grid
                Margin="625,50,35,527"
                Background="DimGray"
                BorderBrush="DarkBlue"
                BorderThickness="4"
                CornerRadius="10">
                <StackPanel>
                    <TextBox
                        Width="820"
                        Height="300"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        CornerRadius="10"
                        IsReadOnly="True"
                        TextWrapping="Wrap" />
                    <TextBox
                        Width="820"
                        Height="55"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        CornerRadius="10"
                        PlaceholderText="Command..."
                        TextWrapping="Wrap" />
                    <Button
                        Width="820"
                        Height="55"
                        Click="DoBattle_Pressed"
                        Content="Do Battle!" />
                </StackPanel>
            </Grid>
            <!--#endregion-->

            <!--#region Ailments&Blessings-->
            <Grid
                Margin="625,500,470,50"
                Background="IndianRed"
                BorderBrush="DarkBlue"
                BorderThickness="4"
                CornerRadius="10">
                <TextBlock
                    Width="150"
                    Margin="130,15,100,360"
                    FontSize="32"
                    Text="Ailments"
                    TextWrapping="Wrap" />
                <ListView x:Name="ailmentListView" Margin="28,73,28,18" />
            </Grid>

            <Grid
                Margin="1041,500,35,50"
                Background="PaleGreen"
                BorderBrush="DarkBlue"
                BorderThickness="4"
                CornerRadius="10">
                <TextBlock
                    Margin="130,15,100,360"
                    FontSize="32"
                    Text="Blessings"
                    TextWrapping="Wrap" />
                <ListView x:Name="blessingListView" Margin="28,73,28,18" />
            </Grid>

            <!--#endregion-->

        </Grid>
    </Viewbox>
</Page>
